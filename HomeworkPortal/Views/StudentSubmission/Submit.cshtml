@model StudentSubmissionModel
@{
    ViewData["Title"] = "Ödev Teslim";
    var assignment = (Assignment)ViewBag.Assignment;
}

<div class="container">
    <h2>Ödev Teslim</h2>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">@assignment.Name</h5>
        </div>
        <div class="card-body">
            <p>@assignment.Description</p>
            <p><strong>Son Teslim Tarihi:</strong> @assignment.DueDate.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Submit" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="AssignmentId" />
                
                <div class="mb-3">
                    <label class="form-label">Ödev Dosyası</label>
                    <input type="file" name="file" class="form-control" required />
                    <div class="form-text">Lütfen ödevinizi tek bir dosya halinde yükleyiniz.</div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-upload"></i> Yükle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> 