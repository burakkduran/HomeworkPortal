@{
    ViewData["Title"] = "Ödev Portalı - Ana Sayfa";
}

<!-- Hero Section -->
<div class="jumbotron jumbotron-fluid bg-primary text-white mb-0">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 font-weight-bold">Ödev Portalı</h1>
                <p class="lead">Öğrenci ve öğretmenler için modern, kullanımı kolay ödev yönetim sistemi</p>
                <hr class="my-4 bg-white">
                <p>Hemen üye olun ve ödevlerinizi kolayca yönetmeye başlayın!</p>
                <a class="btn btn-light btn-lg mr-3" href="/Home/Register" role="button">Üye Ol</a>
                <a class="btn btn-outline-light btn-lg" href="/Home/Login" role="button">Giriş Yap</a>
            </div>
            <div class="col-md-6 d-none d-md-block">
                <i class="fas fa-graduation-cap mr-2 hero-logo"></i>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Özellikler</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-tasks fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Kolay Ödev Yönetimi</h5>
                        <p class="card-text">Ödevlerinizi kolayca oluşturun, takip edin ve değerlendirin.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Zaman Takibi</h5>
                        <p class="card-text">Son teslim tarihlerini takip edin, bildirimleri kaçırmayın.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-bar fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Detaylı Raporlama</h5>
                        <p class="card-text">Öğrenci performansını ve ilerlemeyi kolayca takip edin.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <h2 class="display-4 text-primary font-weight-bold">1000+</h2>
                <p class="lead">Aktif Kullanıcı</p>
            </div>
            <div class="col-md-4 mb-4">
                <h2 class="display-4 text-primary font-weight-bold">5000+</h2>
                <p class="lead">Tamamlanan Ödev</p>
            </div>
            <div class="col-md-4 mb-4">
                <h2 class="display-4 text-primary font-weight-bold">100+</h2>
                <p class="lead">Öğretmen</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto text-center">
                <h2 class="mb-4">Bizimle İletişime Geçin</h2>
                <p class="lead mb-4">Sorularınız için bize ulaşın, size yardımcı olmaktan mutluluk duyarız.</p>
                <a href="/Home/Contact" class="btn btn-primary btn-lg">İletişim</a>
            </div>
        </div>
    </div>
</section>
