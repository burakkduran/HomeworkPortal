@{
    Layout = "_LayoutAdmin";
}

@model List<Lesson>

<h2>Lessons</h2>
<hr />
<a asp-action="Add" asp-controller="Lesson" class="btn btn-primary btn-sm mb-2">Add</a>

@if (Model.Count == 0)
{
    <div class="alert alert-danger col-md-4 mb-2">No lessons added yet!</div>
}
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <td>@lesson.Id</td>
                <td>@lesson.Name</td>
                <td>
                    <a asp-action="Update" asp-controller="Lesson" class="btn btn-primary btn-sm" asp-route-id="@lesson.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Lesson" class="btn btn-danger btn-sm" asp-route-id="@lesson.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
