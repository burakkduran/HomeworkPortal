@{
    Layout = "_LayoutAdmin";
}

@model List<LessonModel>

@section CardHeader {
    <span>Dersler</span>
}
<a asp-action="Add" asp-controller="Lesson" class="btn btn-primary btn-sm mb-2">Ekle</a>

@if (Model.Count == 0)
{
    <div class="alert alert-danger col-md-4 mb-2">Henüz hiç bir ders eklenmedi!</div>
}
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Adı</td>
            <td>Eklenme</td>
            <td>Güncellenme</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <td>@lesson.Id</td>
                <td>@lesson.Name</td>

                <td>
                    @if (lesson.IsActive)
                    {
                        <span class="badge bg-success text-white">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">Pasif</span>
                    }


                </td>
                <td>@lesson.Created</td>
                <td>@lesson.Updated</td>
                <td>
                    <a asp-action="Update" asp-controller="Lesson" class="btn btn-primary btn-sm" asp-route-id="@lesson.Id">Düzenle</a>
                    <a asp-action="Delete" asp-controller="Lesson" class="btn btn-danger btn-sm" asp-route-id="@lesson.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
