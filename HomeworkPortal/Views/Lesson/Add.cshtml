@{
    Layout = "_LayoutAdmin";
}
@model LessonModel
@section CardHeader {
    <span>Ders Ekle</span>
}
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Lesson" asp-action="Add" method="post">

            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-2">
                <label asp-for="GradeId"></label>
                <select asp-for="GradeId" class="form-control" asp-items="@ViewBag.Categories">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <div class="mb-2">
                <input asp-for="IsActive" class="form-check-inline" />
                <label asp-for="IsActive"></label>
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
            <div class="mb-2">
                <input type="submit" value="Save" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
