@{
    Layout = "_LayoutAdmin";
}

@model List<GradeModel>

@section CardHeader {
    <span>Sınıflar</span>
}

<a asp-action="Add" asp-controller="Grade" class="btn btn-primary btn-sm mb-2">Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Durumu</th>
            <th>Eklenme</th>
            <th>Güncellenme</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success text-white">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">Pasif</span>
                    }
                </td>
                <td>@item.Created</td>
                <td>@item.Updated</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    <a asp-controller="StudentGrade" asp-action="ManageStudents" asp-route-gradeId="@item.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-users"></i> Öğrenciler
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>